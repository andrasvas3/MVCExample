<!doctype html>
<html>
  <head>
    <title>CelestialBodies_MVC</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="icon" type="image/png" href="/favicon.png">
    <link href="/css/bulma.min.css" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar is-dark is-fixed-top">
      <div class="navbar-brand">
        <div class="navbar-item"><b>CelestialBodies_MVC</b></div>
      </div>
      <div class="navbar-menu">
        <div class="navbar-start">
          <a class="navbar-item" asp-controller="Site" asp-action="Home">Home</a>
          <a class="navbar-item" asp-controller="Site" asp-action="All">All planets and moons</a>
          <a class="navbar-item" asp-controller="Site" asp-action="AddPlanet">Add planet</a>
          <a class="navbar-item" asp-controller="Site" asp-action="AddMoon">Add moon</a>
        </div>
      </div>
    </nav>
    <div class="container is-fluid">
      <br />
      @RenderBody()
    </div>
    @await RenderSectionAsync("Scripts", required: false)
  </body>
</html>
